/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    // to fix compile issue happening with 'ng-rive' not able to find some canvas types in typescript
    // also install '@types/offscreencanvas' as dev dependency.
    // Alternative is too just instead apply 'skipLibCheck: true' as 'compilerOptions' in 'tsconfig.json'
    "types": ["offscreencanvas"]
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
